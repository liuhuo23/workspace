[mysqld]
user=mysql
datadir=/var/lib/mysql
port=3306
bind-address=0.0.0.0
sql_mode=STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
log-bin=mysql-bin
server-id=1
binlog_format=ROW
expire_logs_days=7
sync_binlog=1
[client]
default-character-set=utf8mb4
